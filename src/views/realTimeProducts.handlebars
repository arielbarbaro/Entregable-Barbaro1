
{{#extend "main"}}
    {{#content "body"}}
        <h2>Lista de Productos</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Código</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoría</th>
                    <th>Thumbnails</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.code}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.stock}}</td>
                        <td>{{this.category}}</td>
                        <td>
                            {{#each this.thumbnails}}
                                <img src="{{this}}" alt="Thumbnail" style="width: 50px; height: auto;">
                            {{/each}}
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/content}}
{{/extend}}